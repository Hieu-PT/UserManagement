<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>hieupt.filters.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>hieupt.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>hieupt.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>hieupt.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchUserController</servlet-name>
        <servlet-class>hieupt.controllers.SearchUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserController</servlet-name>
        <servlet-class>hieupt.controllers.DeleteUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertUserController</servlet-name>
        <servlet-class>hieupt.controllers.InsertUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserController</servlet-name>
        <servlet-class>hieupt.controllers.EditUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserController</servlet-name>
        <servlet-class>hieupt.controllers.UpdateUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPromotionController</servlet-name>
        <servlet-class>hieupt.controllers.AddPromotionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchPromotionController</servlet-name>
        <servlet-class>hieupt.controllers.SearchPromotionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePromotionController</servlet-name>
        <servlet-class>hieupt.controllers.UpdatePromotionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemovePromotionController</servlet-name>
        <servlet-class>hieupt.controllers.RemovePromotionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmPromotionController</servlet-name>
        <servlet-class>hieupt.controllers.ConfirmPromotionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchPromotionHistoryController</servlet-name>
        <servlet-class>hieupt.controllers.SearchPromotionHistoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchUserController</servlet-name>
        <url-pattern>/SearchUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserController</servlet-name>
        <url-pattern>/DeleteUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertUserController</servlet-name>
        <url-pattern>/InsertUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserController</servlet-name>
        <url-pattern>/EditUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserController</servlet-name>
        <url-pattern>/UpdateUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPromotionController</servlet-name>
        <url-pattern>/AddPromotionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchPromotionController</servlet-name>
        <url-pattern>/SearchPromotionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePromotionController</servlet-name>
        <url-pattern>/UpdatePromotionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemovePromotionController</servlet-name>
        <url-pattern>/RemovePromotionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmPromotionController</servlet-name>
        <url-pattern>/ConfirmPromotionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchPromotionHistoryController</servlet-name>
        <url-pattern>/SearchPromotionHistoryController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <context-param>
        <param-name>imageFolderName</param-name>
        <param-value>img</param-value>
    </context-param>
    <resource-ref>
        <res-ref-name>UserMNDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
